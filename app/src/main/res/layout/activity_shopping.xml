<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shopping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myproject.bilibili.com.myproject.mymodel.found.view.activity.ShoppingActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar"
        app:elevation="@dimen/app_bar_elevation">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/ToolBar.TitleText" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <FrameLayout
            android:id="@+id/fl_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
        <RadioGroup
            android:id="@+id/rg_shop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray">
            
            <RadioButton
                android:id="@+id/rb_home"
                style="@style/Shopping"
                android:drawableTop="@drawable/ic_btn_shop"
                android:text="首页"/>

            <RadioButton
                android:id="@+id/rb_shop_cart"
                style="@style/Shopping"
                android:drawableTop="@drawable/ic_btn_shop"
                android:text="购物车"/>

            <RadioButton
                android:id="@+id/rb_ding_dan"
                style="@style/Shopping"
                android:drawableTop="@drawable/ic_btn_shop"
                android:text="订单"/>
        </RadioGroup>

    </LinearLayout>
</LinearLayout>
