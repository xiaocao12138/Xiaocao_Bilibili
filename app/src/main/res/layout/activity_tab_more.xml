<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tab_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light_30"
    tools:context="com.myproject.bilibili.com.myproject.mymodel.found.view.activity.TabMoreAcivity">


    <EditText
        android:id="@+id/edt_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_arrow_back_black"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:padding="7dp"
        android:text="搜索视频,番剧,up主或AV号"
        android:drawableRight="@drawable/ic_scan"
        android:textColor="#9c9c9c"
        android:textSize="14sp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:overScrollMode="never"/>

</LinearLayout>
