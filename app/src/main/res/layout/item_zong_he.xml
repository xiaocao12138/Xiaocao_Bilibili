<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_recommend"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bili_default_image_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/iv_recommend"
        android:text="keqindemaque"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="keqindemaque"
            android:textSize="16sp"
            android:layout_above="@+id/tv_type_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_grey"
            android:layout_toRightOf="@id/tv_recom_name"
            android:layout_alignBottom="@id/tv_type_name"/>
    </LinearLayout>

</LinearLayout>
